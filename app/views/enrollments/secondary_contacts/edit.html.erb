<% page_title = t(".heading") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= t(".heading") %></h1>
    <%= form_for @secondary_contact,
                 url: enrollment_secondary_contact_path(@enrollment, @secondary_contact),
                 builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>

      <%= render partial: "flood_risk_engine/shared/error_summary", locals: { f: f } %>

      <%= f.govuk_text_field :email_address, label: { text: t(".email_address") } %>
      <%= f.govuk_submit t("global.continue")  %>

    <% end %>

    <p class="govuk-body">
      <%= link_to t("cancel_go_back"), admin_enrollment_exemption_path(@enrollment_exemption)  %>
    </p>
  </div>
</div>

