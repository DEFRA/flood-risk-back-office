<h2 class="govuk-heading-m">Role help</h3>
<p class="govuk-body"><%= t("user_roles.intro") %></p>

<dl class="govuk-summary-list">
  <% t("user_roles.roles").each do |key, _v| %>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        <%= t("user_roles.roles.#{key}.name") %>
      </dt>
      <dd class="govuk-summary-list__value">
        <%= t("user_roles.roles.#{key}.description") %>
      </dd>
    </div>
  <% end %>
</dl>
