<div class="panel panel-info role-help">
  <div class="panel-heading">
    <h3 class="panel-title">Role help</h3>
  </div>
   <div class="panel-body">
    <p><%= t("user_roles.intro") %></p>
    <dl class="dl-horizontal">
      <% t("user_roles.roles").each do |key, v| %>
        <dt><%= t("user_roles.roles.#{key}.name") %></dt>
        <dd><%= t("user_roles.roles.#{key}.description") %></dd>
      <% end %>
    </dl>
   </div>
</div>
