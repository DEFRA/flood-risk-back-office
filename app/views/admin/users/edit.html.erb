<% @page_title = t('.title') %>

<h1 class="govuk-heading-l">
  <%= t('.title') %>
  <span class="govuk-caption-m"><%= @user.email %></span>
</h1>

<%= form_for [:admin, @user], builder: GOVUKDesignSystemFormBuilder::FormBuilder do |f| %>

  <%= f.govuk_select :assigned_role,
       t("allowed_roles").map(&:reverse).sort.collect{ |role| [role[0], role[1]] },
       html: { readonly: (@user == current_user) },
       label: { text: t(".assigned_role") }  %>

  <%= f.govuk_submit t(".submit") %>
<% end %>


<p class="govuk-body">
  <%= link_to t("cancel_go_back"), admin_users_path %>
</p>

<%= render "role_help" %>
