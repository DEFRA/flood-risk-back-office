<div class="panel panel-default actions">
  <div class="panel-heading panel-title">
    <%= glyphicon_tag :cog, text: t('.title') %>
  </div>
  <div class="panel-body">
    <% if policy(presenter.enrollment).edit? %>
      <p>
        <%= link_to t(".update_status"),
                    edit_admin_enrollment_path(presenter.enrollment),
                    id: "update-enrollment-exemption-status",
                    class: "btn btn-danger",
                    role: 'button' %>
      </p>
    <% end %>
    <% if policy(presenter.enrollment_exemption).deregister? %>
      <p>
        <%= link_to t(".deregister"),
                    new_admin_enrollment_exemption_deregister_path(
                      presenter.enrollment_exemption
                    ),
                    class: "btn btn-warning",
                    role: 'button' %>
      </p>
    <% end %>
    <% if policy(presenter.enrollment).change_assisted_digital? %>
      <p>
        <%= link_to t(".change_ad"),
                    edit_admin_enrollment_path(presenter.enrollment),
                    id: "change-assisted-digital",
                    class: "btn btn-info",
                    role: 'button' %>
      </p>
    <% end %>
  </div>
</div>
