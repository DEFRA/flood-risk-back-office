<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10">
      <h1><%= page_title t('.title', reference: presenter.reference_number) %></h1>

      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading panel-title">
            </div>

            <div class="panel-body">
              <%= simple_form_for form,
                                  url: admin_enrollment_exemption_assistance_path(enrollment_id: presenter),
                                  html: { method: :patch } do |f| %>

                <div class="col-md-4">
                  <%= f.input :assistance_mode,
                              collection: presenter.assistance_modes_map,
                              required: true %>
                </div>
                <div class="col-md-8">
                  <%= f.input :comment, as: :text %>
                </div>

                <%= f.button :submit, t(".submit"), class: 'btn btn-primary' %>
                </div>
              <% end %>
              </div>
        </div>
      </div>
      <%= link_to glyphicon_tag(:triangle_left, text: t("cancel_go_back")),
                  [:admin, form.enrollment_exemption],
                  class: "ignore-visited" %>
    </div>
  </div>
</div>
